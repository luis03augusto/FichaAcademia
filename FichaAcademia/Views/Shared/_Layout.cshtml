@using Microsoft.AspNetCore.Http; 
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAcessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FichaAcademia</title>

    <link href="~/vendor/font-awesome-5-css/css/all.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/materialize-css/dist/css/materialize.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper grey darken-3 body-content">
                <a href="#" class="brand-logo">Logo</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Adminstradores">Login</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Objetivos">Objetivos</a></li>
                        <li><a asp-controller="Exercicios">Objetivos</a></li>
                        <li><a asp-controller="CategoriasExercicios">Categorias</a></li>
                        <li><a asp-controller="Professores">Professores</a></li>
                        <li><a asp-controller="Aluno">Alunos</a></li>
                        <li>Bem vindo, @HttpContextAcessor.HttpContext.Session.GetString("Usuario")</li>
                        <li><a asp-controller="Administradores" asp-action="Logout">Logout</a></li>
                    }

                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
      
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - FichaAcademia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/vendor/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/vendor/materialize-css/dist/js/materialize.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
